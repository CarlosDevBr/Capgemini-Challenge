import java.util.Scanner;

import utils.ValidadorSenhas;

public class senhaForte {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite uma senha: ");
		String senha = sc.nextLine();
		
		if(!ValidadorSenhas.containLowerCase(senha)) {
			System.out.println("Falta letra Minuscula");
		}
		if(!ValidadorSenhas.containUpperCase(senha)) {
			System.out.println("Falta letra Maiuscula");
		}
		if(!ValidadorSenhas.containNumber(senha)) {
			System.out.println("Falta letra Minuscula");
		}
		if(!ValidadorSenhas.containSpecialCaractere(senha)) {
			System.out.println("Falta letra Minuscula");
		}
		
//		if(senha.length() < 6) { 
//			if(ValidadorSenhas.howManyAreMissing(senha) == 0) {
//				System.out.println(6 - senha.length());
//			}
//			else {
//			System.out.println(6 - senha.length() + ValidadorSenhas.howManyAreMissing(senha) - 1);
//			}
//		}
//		if(senha.length() > 6) {
//			System.out.println(ValidadorSenhas.howManyAreMissing(senha));
//		}
//		System.out.println(ValidadorSenhas.howManyAreMissing(senha));
		sc.close();
	}
}
